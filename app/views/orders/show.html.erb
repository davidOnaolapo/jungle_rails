<section class="orders-show">

  <header class="page-header">
    <% puts "My order is", @my_orders.inspect %>
    <h1>Thank you for your order! <%= @order.email%></h1>
    <h3>Details of your order, order <%= @order.id%> are below</h3>
  </header>

  <div class="panel panel-default items">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @my_orders.each do |order| %>
            <%= render 'item', product: @products[order.product_id - 1], quantity: order.quantity %>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL:
            </th>
            <th>
              <%= humanized_money_with_symbol @my_price / 100.0 %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
